<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:layout_margin="5dp"
    tools:context="singlepageapp.mohanty.dinesh.com.musicplayer.MainActivity">
<ListView
    android:id="@+id/view_recycle"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

</ListView>
 <LinearLayout
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <SeekBar
         android:id="@+id/seekbar_main"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="1dp" />
     <TextView
         android:id="@+id/text_on_player"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="10dp"
         android:gravity="center_horizontal"/>
     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/skip_previous_button"
             android:src="@drawable/ic_skip_previous_black_24dp"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/play_pause_button"
        android:src="@drawable/ic_play_circle_filled_black_36dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/skip_next_button"
        android:src="@drawable/ic_skip_next_black_24dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/play_button"
        android:layout_gravity="center"/>
     </LinearLayout>
 </LinearLayout>

</LinearLayout>
